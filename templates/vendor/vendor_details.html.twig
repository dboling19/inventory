{% block form %}
<form class="db-wrapper db-fill db-column db-border" id="vendor_form" method="get">
  <div class="db-form-section">
    <label for="vendor_code">
      Vendor Code
      <input type="text" class="db-input db-filter" list="vendor_code_datalist" id="vendor_code" name="vendor_code" value="{{ params.vendor_code }}" required autocomplete="off">
      <datalist id="vendor_code_datalist">
        {% for vendor in vendors %}
          <option value="{{ vendor.vendorCode }}">{{ vendor.vendorCode }}</option>
        {% endfor %}
      </datalist>
    </label>
  </div>
  <div class="db-form-section">
    <label for="vendor_desc">
      Vendor Desc
      <input type="text" class="db-input db-filter" id="vendor_desc" name="vendor_desc" value="{{ params.vendor_desc }}" disabled autocomplete="off">
    </label>
  </div>
  <div class="db-form-section">
    <label for="vendor_notes">
      Vendor Notes
      <textarea class="db-input" id="vendor_notes" name="vendor_notes" value="{{ params.vendor_notes }}" disabled autocomplete="off"></textarea>
    </label>
  </div>
  <div class="db-form-section">
    <label for="vendor_addr">
      Vendor Address
      <input type="text" class="db-input" id="vendor_addr" name="vendor_addr" value="{{ params.vendor_addr }}" disabled autocomplete="off">
    </label>
  </div>
  <div class="db-form-section">
    <label for="vendor_email">
      Vendor Email
      <input class="db-input" id="vendor_email" name="vendor_email" value="{{ params.vendor_email }}" autocomplete="off">
    </label>
  </div>
</form>
{% endblock %}